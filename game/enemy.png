<script>
  // ロゴ画像
  const logoUrl = "/base/images/header-logo.2025012002.png";
  const defaultXPostMessage = '選択範囲の画像を「貼り付け」できます！';

(function() {
  // シェアボタンを動的に生成してページに追加
  const shareButton = document.createElement('div');
  shareButton.id = 'selection-to-image-share-button';
  shareButton.style.display = 'none';
  shareButton.style.position = 'absolute';
  shareButton.style.backgroundColor = 'black';
  shareButton.style.color = 'white';
  shareButton.style.padding = '5px 10px';
  shareButton.style.borderRadius = '5px';
  shareButton.style.cursor = 'pointer';
  shareButton.style.zIndex = '1000';
  shareButton.style.alignItems = 'center'; // 上下中央揃え
  shareButton.style.gap = '5px'; // アイコンとテキストの間隔
  shareButton.innerHTML = '<svg viewBox="0 0 24 24" fill="#fff" width="22" aria-hidden="true" class="r-1nao33i r-4qtqp9 r-yyyyoo r-16y2uox r-8kz0gk r-dnmrzs r-bnwqim r-1plcrui r-lrvibr r-lrsllp"><g><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path></g></svg>に投稿する';
  document.body.appendChild(shareButton);

  let currentRange = null;

  // イベントリスナーを設定
  document.addEventListener('mouseup', (e) => {
    // setTimeoutを使って、ブラウザによる選択解除の処理を待つ
    setTimeout(() => {
      const selection = window.getSelection();
      if (selection.toString().trim().length > 0) {
        currentRange = selection.getRangeAt(0);
        // マウスカーソルの位置を基準にボタンを表示
        shareButton.style.left = `${e.pageX + 5}px`;
        shareButton.style.top = `${e.pageY + 5}px`;
        shareButton.style.display = 'flex';
      }
    }, 10); // わずかな遅延
  });

  document.addEventListener('mousedown', (e) => {
    // クリックした要素がシェアボタン、またはその子要素でなければ非表示にする
    if (!e.target.closest('#selection-to-image-share-button')) {
      shareButton.style.display = 'none';
      currentRange = null;
    }
  });

  shareButton.addEventListener('click', async () => {
    if (!currentRange) return;

    // 選択範囲のHTML内容を複製
    const fragment = currentRange.cloneContents();

    // 複製した内容を配置する一時的なコンテナを作成
    const snapshotContainer = document.createElement('div');

    // スタイルを適用
    const commonAncestor = currentRange.commonAncestorContainer;
    const style = window.getComputedStyle(commonAncestor.nodeType === 1 ? commonAncestor : commonAncestor.parentElement);

    snapshotContainer.style.width = `${currentRange.getBoundingClientRect().width}px`;
    snapshotContainer.style.fontFamily = style.fontFamily;
    snapshotContainer.style.fontSize = style.fontSize;
    snapshotContainer.style.color = style.color;
    snapshotContainer.style.backgroundColor = style.backgroundColor || 'white';
    snapshotContainer.style.padding = '10px';
    snapshotContainer.appendChild(fragment);

    // 画面外にコンテナを配置
    snapshotContainer.style.position = 'absolute';
    snapshotContainer.style.left = '-9999px';
    document.body.appendChild(snapshotContainer);

    // ボタンを先に非表示にする
    shareButton.style.display = 'none';

    try {
      // 一時的なコンテナを画像化
      const contentCanvas = await html2canvas(snapshotContainer, {
        useCORS: true,
        scale: 3,
        backgroundColor: snapshotContainer.style.backgroundColor,
      });

      // 一時的なコンテナを削除
      document.body.removeChild(snapshotContainer);

      // ロゴを合成する処理
      let finalCanvas = contentCanvas;
      if (logoUrl) {
        try {
          const logo = await new Promise((resolve, reject) => {
            const img = new Image();
            img.crossOrigin = "anonymous";
            img.onload = () => resolve(img);
            img.onerror = (err) => reject(new Error('ロゴ画像の読み込みに失敗しました。URLを確認してください。'));
            img.src = logoUrl;
          });

          const logoHeight = 50 * 3; // scaleに合わせてロゴも高解像度で描画
          const logoWidth = (logo.width / logo.height) * logoHeight;
          const padding = 20 * 3;

          const finalWidth = contentCanvas.width;
          const finalHeight = contentCanvas.height + logoHeight + padding;

          finalCanvas = document.createElement('canvas');
          finalCanvas.width = finalWidth;
          finalCanvas.height = finalHeight;
          const ctx = finalCanvas.getContext('2d');

          ctx.fillStyle = 'white';
          ctx.fillRect(0, 0, finalWidth, finalHeight);
          ctx.drawImage(contentCanvas, 0, 0);
          ctx.drawImage(logo, (finalWidth - logoWidth) / 2, contentCanvas.height + padding / 2, logoWidth, logoHeight);
        } catch (logoErr) {
          console.error(logoErr);

          // ロゴ読み込み失敗時はロゴなしの画像をそのまま使う
        }
      }

      const blob = await new Promise(resolve => finalCanvas.toBlob(resolve, 'image/png'));

      if (!blob) {
        alert('画像データ(Blob)の生成に失敗しました。');
        return;
      }

      await navigator.clipboard.write([
        new ClipboardItem({ 'image/png': blob })
      ]);

      alert('選択範囲の画像をクリップボードにコピーしました！\nXの投稿画面で「貼り付け」してご利用ください。');

      const text = encodeURIComponent(defaultXPostMessage + '\n\n');
      const url = encodeURIComponent(window.location.href);
      const tweetUrl = `https://twitter.com/intent/tweet?text=${text}&url=${url}`;
      window.open(tweetUrl, '_blank');

    } catch (err) {
      console.error('処理中にエラーが発生しました。', err);
      alert(`画像化でエラーが発生しました。` + "\n" + `お手数ですが、ページをリロードして再度お試しください。`);
      // エラーが発生した場合も一時的なコンテナを削除
      if (document.body.contains(snapshotContainer)) {
        document.body.removeChild(snapshotContainer);
      }
    } finally {
      // 選択範囲をリセット
      currentRange = null;
    }
  });
})();

</script>


