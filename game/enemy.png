      danglingArticles.push({id:_id[1],link:item.click_url,img:item.image,title:item.title,width:null,height:null});
    });

    if (danglingArticles.length == 0) return;
  
    var danglingPosition = Math.floor(Math.random() * danglingArticles.length);

    // 枠表示用要素追加
    $('main.thm-main').after('<section id="danglingList" style="position:fixed;top:0;left:0;width:100%;z-index:9999999;"><ul class="relation-arti-list"></ul></section>');
