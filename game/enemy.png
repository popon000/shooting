      _link = danglingArticles[danglingPosition].link;
      _img  = '<img style="float:left;margin-right:5px;height:60px;width:auto;" src="' + danglingArticles[danglingPosition].img + '" width="' + danglingArticles[danglingPosition].width + '" height="' + danglingArticles[danglingPosition].height + '">';
